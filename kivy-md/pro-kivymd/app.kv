

<main>:
    name: "main"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title:"G R I M E."
            md_bg_color: 0.624, 0.122, 0.922
            specific_text_color: 1,1,1,1

            pos_hint: {'top': 1}
            elevation: 3
            orientation: 'vertical'
            left_action_items: [['dots-vertical', lambda x:root.menu()]]



        BoxLayout:
            orientation: 'vertical'
            MDLabel:
                text:""
                id:response
                pos_hint: {'center_x': .5, 'center_y':.5 }
        MDBoxLayout:
            orientation: 'horizontal'
            MDTextField:
                hint_text: "Ask anything"
                cursor_color: [0.624, 0.122, 0.922]
                mode:"fill"
                id:user_value
                pos_hint: {'center_x': 2,'center_y': .1}
                multiline: True
                size_hint_x: 11.9
                text_color_focus: 0,0,0,1


            MDFloatingActionButton:
                icon:"send"
                on_press: root.trigger()
                pos_hint: {'center_x': 2,'center_y': .1}

<chart_history>:

    name: "History"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title:"view your chart with G R I M E ai"
            pos_hint: {'top': 1}
            elevation: 4
            icon:"arrow-left"
            orientation: 'vertical'
            left_action_items: [["arrow-left",lambda x:root.back()]]
            right_action_items: [["magnify", lambda x:root.to_search()]]
            Widget:
                height: 50

        MDCard:
            text: 'Text'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint: 1,0.7
            elevation: 2
            radius: [30]
            ScrollView:
                MDList:
                    text:"dfdffdfdfd"
                    id: chart_box



<Search_chart>:
    name:"Search_chart"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'Search'
            pos_hint: {'top': 1}
            height:12
            size_hint: 1,None
        MDTextField:
            hint_text: "Search for Charts........"
            mode:"round"
            max_text_length:  145
            icon_right:"magnify"
            # on_icon_right: root.search()
            size_hint:1,None
            pos_hint: {'top':1,'center_y':.8,}
            on_text: root.search(self.text)

        MDCard:
            text: 'Text'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint: 1,0.7
            elevation: 2
            radius: [30]
            ScrollView:
                MDList:
                    id:search_results


<Sign_up>:
    name:"register"
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text:"G R I M E"
            font_style: 'H4'
            halign: 'center'
            pos_hint: {'center_x': 0.5,'center_y': 4}
            color: "white"
        BoxLayout:
            orientation: 'horizontal'
            spacing: '10dp'
            pos_hint: {'center_x': 0.5, 'center_x': .5 }
            MDTextField:
                hint_text: "First Name"
                mode:"rectangle"


                # pos_hint: {'x': .5, 'y': .5}
                multiline: False
                pos_hint: {'center_x': .5, 'center_y':0.7 }

            MDTextField:
                hint_text: "Second Name"
                mode:"rectangle"
                
                multiline: False
                pos_hint: {'center_x': .5, 'center_y':0.7 }




