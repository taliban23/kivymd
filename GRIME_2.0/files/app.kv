<Home>:
    name:"Home"
    MDFloatLayout:
        id: home_body
        MDIconButton:
            icon:"history"
            theme_text_color: 'Custom'
            text_color: 0.949, 0.031, 0.424
            pos_hint: {'top':0.97,'center_x': .1}
            elevation: 3
            on_release:
                root.manager.transition.direction="left"
                root.manager.current='chat'

        MDChip:
            id:name_holder
            text: ""
            icon_left: "account"
            font_size: "12sp"
            size_hint_x: None
            width: '100px'
            theme_text_color: 'Custom'
            md_bg_color: [0.078, 0.078, 0.078]
            text_color: 0.949, 0.031, 0.424
            pos_hint: {'top': 0.97,'center_x': .5}
            elevation: 3

        MDIconButton:
            icon:"cog"
            theme_text_color: 'Custom'
            text_color: 0.949, 0.031, 0.424
            pos_hint: {'top': 0.97,'center_x': 0.9}
            on_release: root.menu()
            elevation: 3


        MDCard:
            orientation: "vertical"
            radius: [10,10,0,0]
            pos_hint: {'center_x': .5,'center_y': 0.44}
            size_hint: 1, 0.89
            md_bg_color: [0.078, 0.078, 0.078]
            style:'filled'
            id:main_card
            ScrollView:
                MDBoxLayout:
                    orientation: "vertical"
                    # height: self.minimum_height
                    font_name: './fonts/emoji.ttf'
                    adaptive_height: True
                    spacing: '10dp'
                    padding: "10dp"
                    id:content_box

        MDTextField:
            id:question_input
            hint_text:"Ask anything....."
            mode: "fill"
            fill_color_normal: [0.051, 0.051, 0.047]
            hint_text_color_focus: 'white'
            text_color_focus: "gray"
            font_name: 'seguiemj'
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: (0.949, 0.031, 0.424)
            multiline: True



        MDIconButton:
            id:send_button
            size_hint_max_x: 3
            icon: 'send'
            theme_text_color: 'Custom'
            theme_icon_color: 'Custom'
            md_bg_color: [0.949, 0.031, 0.424]
            text_color:  'black'
            pos_hint: {'right': 0.98 , 'center_y': 0.13}
            on_release: root.start_task()
            # on_touch_down: root.start_task

        MDIconButton:

            icon: 'tab-plus'
            theme_text_color: 'Custom'
            theme_icon_color: 'Custom'
            icon_size: '22sp'
            # disabled: 'True'
            opacity: 1
            text_color:  (0.949, 0.031, 0.424)
            pos_hint: {'right': 0.98 , 'center_y': 0.20}
            on_release: root.clear_chat()



        MDSpinner:
            id: ai_spinner
            active: False
            size_hint: None, None
            size: "30dp", "40dp"
            pos_hint: {'right': 0.98 , 'center_y': 0.13}
            color: [0.949, 0.031, 0.424]

<Sign_Up>:
    name: 'sign_up'
    MDFloatLayout:
        md_bg_color: 'black'
        # AsyncImage:
        #     source: 'image_set/paper.jpeg'
        #     fit_mode: 'fill'
        Image:
            source: "./icon_sets/app_icons/ico-SM.png"
            allow_stretch:True
            size_hint_y: None
            pos_hint: {'center_x':0.30, 'top':1 }

        MDLabel:
            text: 'G R I M E'
            font_name: './fonts/Plaster-Regular.ttf'
            theme_text_color: 'Custom'
            text_color:0.949, 0.031, 0.424
            font_size: "20sp"
            size_hint_y: None
            halign: 'center'
            pos_hint: {'top':1}

        MDLabel:
            text: "SIGN UP"
            font_style:'Button'
            size_hint_y: None
            font_size: "20sp"
            halign: 'center'
            theme_text_color: 'Custom'
            text_color:"white"
            pos_hint: {'top':0.96}

        # name input field
        MDTextField:
            id: name
            hint_text: "Full Name"
            pos_hint: {'center_x': .5,'center_y': 0.70}
            theme_text_color: 'Custom'
            size_hint_x: 0.90
            icon_right: 'account'
            font_size: '15sp'
            valign: 'center'
            helper_text: "*Only lowercase letters(First name and Surnname only)"
            helper_text_mode: "on_focus"
            md_bg_color: 'black'
            focus_behavior: True
            icon_right_color_focus:'white'
            hint_text_color_focus: 'white'
            text_color_focus: "white"
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: 'white'
#   username input field
        MDTextField:
            id: username
            hint_text: "Create username"
            pos_hint: {'center_x': .5,'center_y': 0.60}
            theme_text_color: 'Custom'
            size_hint_x: 0.90
            on_text: root.check_username(self.text)
            # mode:'round'
            icon_right: 'account-key'
            font_size: '15sp'
            text_color_focus: "white"
            focus_behavior: True
            helper_text: "*Include:(0-9),(a-z),Optional((A-Z) (!,@,$,%,^,&,*,+,#)) and 4+"
            helper_text_mode: "on_focus"
            icon_right_color_focus:'white'
            hint_text_color_focus: 'white'
            on_text_validate:
            text_color_focus: "gray"
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: 'white'
# email input field
        MDTextField:
            id: email
            hint_text: "Email"
            pos_hint: {'center_x': .5,'center_y': 0.50}
            theme_text_color: 'Custom'
            size_hint_x: 0.90
            icon_right: 'email'
            font_size: '15sp'
            helper_text: "myname@example.com"
            helper_text_mode: "on_focus"
            focus_behavior: True
            icon_right_color_focus:'white'
            hint_text_color_focus: 'white'
            text_color_focus: "white"
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: 'white'

# gender input field
        MDTextField:
            id: gender
            hint_text: "Gender"
            pos_hint: {'center_x': .5, 'center_y': 0.40}
            size_hint_x: 0.90
            icon_right:"gender-male-female"
            theme_text_color: 'Custom'
            font_size: '15sp'
            focus_behavior: True
            # mode:'round'
            helper_text: "*Select options from the menu"
            helper_text_mode: "on_focus"
            icon_right_color_focus:'white'
            # helper_text_color_normal: () ""
            hint_text_color_focus:'white'
            text_color_focus: "white"
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: 'white'
            on_focus: if self.focus: root.gender_select()

        MDIconButton:
            icon:'arrow-left-circle-outline'
            size_hint_y: None
            pos_hint: {'center_x':0.028, 'top':1 }
            on_release:
                root.manager.transition.direction='left'
                root.manager.current = 'landing_page'


  # password input field
        MDTextField:
            id: passwords
            hint_text: "Password"
            pos_hint: {'center_x': .5,'center_y': 0.30}
            theme_text_color: 'Custom'
            size_hint_x: 0.90
            icon_right:"lock"
            min_text_length:8
            focus_behavior: True
            font_size: '15sp'
            helper_text: "*Include: (!,@,$,%,^,&,*,+,#),(0-9),(a-z),(A-Z) and 8+"
            helper_text_mode: "on_focus"
            icon_right_color_focus:'white'
            hint_text_color_focus: 'white'
            text_color_focus: "white"
            cursor_color: [0.949, 0.031, 0.424]
            line_color_focus: 'white'


# re-type-password input field
        MDTextField:
            id: confirm_pass
            hint_text: "Re-Type Password"
            pos_hint: {'center_x': 0.5,'center_y': 0.20}
            theme_text_color: 'Custom'
            size_hint_x: 0.90
            icon_right:"lock-check"
            font_size: '15sp'
            helper_text: ""
            font_name: 'seguiemj'
            helper_text_mode: "on_focus"
            focus_behavior: True
            icon_right_color_focus:'white'
            hint_text_color_focus:'white'
            text_color_focus: "white"
            line_color_focus: 'white'

#  sign_up button
        MDRaisedButton:
            text: "SIGN UP"
            font_style: 'Button'
            text_color: "white"
            size_hint_y: None
            id:main_button
            font_size: "24sp"
            elevation: 5
            pos_hint: {'center_x': 0.5,'center_y': 0.10}
            size_hint: 0.9,None
            elevation: 4
            height: "97dp"
            md_bg_color: (0.949, 0.031, 0.424)
            on_release: root.upload_user_data()
# to sign in page
        MDTextButton:
            text:'Already have an account, SIGN IN ?'
            size_hint_y: None
            font_size: '13sp'
            theme_text_color: 'Custom'
            text_color: (0.949, 0.031, 0.424)
            pos_hint: {'center_x': 0.5 , 'center_y': 0.023}
            on_release:
                root.manager.transition.direction='left'
                root.manager.current = 'sign_in'

